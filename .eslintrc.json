{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    // "linebreak-style": "off",
    // "comma-dangle": "off",
    "consistent-return": "off",
    "no-underscore-dangle": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "no-console": "off",
    "no-restricted-syntax": "off",
    "no-await-in-loop": "off",
    "allowShortCircuit": "true"
  }
}
